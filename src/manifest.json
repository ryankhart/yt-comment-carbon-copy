{
    "manifest_version": 3,
    "name": "YouTube Comment Monitor",
    "version": "1.0",
    "description": "Detect deleted comments on YouTube.",
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["activeTab", "storage", "tabs"],
    "action": {
      "default_popup": "popup.html"
    }
  }
  