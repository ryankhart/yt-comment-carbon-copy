{
    "manifest_version": 3,
    "name": "YT Comment Carbon Copy",
    "version": "1.0",
    "description": "Backup your YouTube comments and detect when they get deleted.",
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["activeTab", "storage", "tabs"],
    "action": {
      "default_popup": "popup.html"
    }
  }
  